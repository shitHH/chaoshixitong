<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myshop.dao.ShopCommodityDao">
    <select id="findAll" resultType="com.myshop.bean.ShopCommodity">
        select * from shopcommodity
    </select>
    <select id="findById" resultType="com.myshop.bean.ShopCommodity">
        SELECT sid,sname,sortid,number FROM shopcommodity WHERE id=1
    </select>
    <select id="findBySid" resultType="com.myshop.bean.ShopCommodity">
        select * from shopcommodity where sid =1001001
    </select>
    <select id="findBySortId" resultType="com.myshop.bean.ShopCommodity">
        select sid,sname,sortid from shopcommodity where id=1
    </select>
</mapper>